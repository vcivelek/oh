{
	"name": "CosmosDBCopyPipeline",
	"properties": {
		"activities": [
			{
				"name": "CosmosDB_Copy",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "CosmosDbSqlApiSource",
						"preferredRegions": []
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "JsonWriteSettings",
							"quoteAllText": true
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "CosmosDb_ds",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "ADLS_ds",
						"type": "DatasetReference",
						"parameters": {
							"directory": "movie_catalog",
							"file": "movies.json"
						}
					}
				]
			}
		],
		"parameters": {
			"items": {
				"type": "string",
				"defaultValue": [
					{
						"source": {
							"tableName": "[dbo].[Addresses]"
						},
						"destination": {
							"directory": "southridge/cloudsales",
							"file": "dbo.Addresses.parquet"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Customers]"
						},
						"destination": {
							"directory": "southridge/cloudsales",
							"file": "dbo.Customers.parquet"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[OrderDetails]"
						},
						"destination": {
							"directory": "southridge/cloudsales",
							"file": "dbo.OrderDetails.parquet"
						}
					},
					{
						"source": {
							"tableName": "[dbo].[Orders]"
						},
						"destination": {
							"directory": "southridge/cloudsales",
							"file": "dbo.Orders.parquet"
						}
					}
				]
			}
		},
		"annotations": []
	}
}